{
  "compilerOptions": {
  	"baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/*"
      ]
    },
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "lib": ["es6","dom"]
  },
  "include": [
  	"src/**/*.ts"
  ]
}
